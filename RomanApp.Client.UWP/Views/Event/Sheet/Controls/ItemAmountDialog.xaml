<ContentDialog
    x:Class="RomanApp.Client.UWP.Views.Event.Sheet.Controls.ItemAmountDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RomanApp.Client.UWP.Views.Event.Sheet.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{Binding Title}"
    PrimaryButtonText="Ok"
    DefaultButton="Primary"
    SecondaryButtonText="Cancel"
    PrimaryButtonCommand="{Binding SubmitCommand}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" 
                     TextAlignment="Center"
                     Text="{Binding Amount,Mode=TwoWay, Converter={StaticResource c_d}}"/>
        </Grid>

    </Grid>
</ContentDialog>
