<Application
    x:Class="RomanApp.Client.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:RomanApp.Client.UWP.Converters"
    xmlns:tc="using:RomanApp.Client.UWP.Views.Sheet.Dialogs.OutcomeText"
    xmlns:local="using:RomanApp.Client.UWP">

    <Application.Resources>
        <c:BooleanToVisibilityConverter x:Key="c_bv" />
        <c:BooleanToVisibilityConverter x:Key="c_bv_i" IsInverse="True" />
        <c:DecimalConverter x:Key="c_d" />
        <c:CountConverter x:Key="c_count" />
        <c:AnyToVisibilityConverter x:Key="c_av" />
        <c:EnumBooleanConverter x:Key="c_eb" />
        <c:AbsConverter x:Key="c_abs" />
        <c:StringFormatConverter x:Key="c_sformat" />
        <c:MoneyConverter x:Key="c_m" />
        <c:NullToVisibilityConverter x:Key="c_nv" />
        <c:FormatConverter x:Key="c_format" />
    </Application.Resources>

</Application>
